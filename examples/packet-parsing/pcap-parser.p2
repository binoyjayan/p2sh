#!/usr/bin/env p2sh

if len(argv) < 2 {
  println("Usage: {} <pcap file>", argv[0]);
  exit(1);
}

let f = pcap_open(argv[1]);
if is_error(f) {
    puts(f);
    exit(1);
}

let pcap = null;

while pcap = pcap_read_next(f) {
   let sec = pcap.sec;
   let usec = pcap.usec;
   let eth = pcap.eth;
   let src = eth.src;

   println("[{}.{}] {}", sec, usec, eth);
}
